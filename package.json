{
    "name": "@kxalex/css-select",
    "version": "5.1.0",
    "description": "a CSS selector compiler/engine",
    "author": "Felix Boehm <me@feedic.com>",
    "contributors": [
        {
            "name": "Oleksii S",
            "email": "kxalex@gmail.com",
            "url": "https://github.com/kxalex"
        }
    ],
    "funding": {
        "url": "https://github.com/sponsors/fb55"
    },
    "keywords": [
        "css",
        "selector",
        "sizzle"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/kxalex/css-select.git"
    },
    "main": "lib/cjs/index.js",
    "types": "lib/index.d.ts",
    "module": "lib/index.js",
    "exports": {
        "import": "./lib/cjs/index.js",
        "require": "./lib/index.js"
    },
    "files": [
        "lib"
    ],
    "dependencies": {
        "boolbase": "^1.0.0",
        "css-what": "^6.1.0",
        "domhandler": "^5.0.3",
        "domutils": "^3.1.0",
        "nth-check": "^2.1.1"
    },
    "devDependencies": {
        "@types/boolbase": "^1.0.3",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.14.2",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^6.21.0",
        "cheerio-soupselect": "^0.1.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "htmlparser2": "^9.1.0",
        "jest": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.4",
        "typescript": "^5.4.5"
    },
    "scripts": {
        "test": "npm run test:jest && npm run lint",
        "test:jest": "jest",
        "lint": "npm run lint:es && npm run lint:prettier",
        "lint:es": "eslint src",
        "lint:prettier": "npm run prettier -- --check",
        "format": "npm run format:es && npm run format:prettier",
        "format:es": "npm run lint:es -- --fix",
        "format:prettier": "npm run prettier -- --write",
        "prettier": "prettier '**/*.{ts,md,json,yml}'",
        "build": "npm run clean && npm run build:cjs && npm run build:esm",
        "build:cjs": "tsc -p tsconfig.cjs.json && echo '{\"type\":\"commonjs\"}' > lib/cjs/package.json",
        "build:esm": "tsc -p tsconfig.json",
        "prepare": "npm run build",
        "clean": "npx rimraf lib",
        "clean:all": "npx rimraf lib node_modules"
    },
    "license": "BSD-2-Clause",
    "prettier": {
        "tabWidth": 4,
        "proseWrap": "always"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "coverageProvider": "v8",
        "moduleNameMapper": {
            "^(.*)\\.js$": [
                "$1.js",
                "$1"
            ]
        },
        "testMatch": [
            "<rootDir>/test/*.ts",
            "<rootDir>/**/*.spec.ts"
        ]
    },
    "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a"
}
